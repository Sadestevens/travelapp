  <h1>New Suggestion</h1>

  <%= form_for @suggestion do |f| %>
    <p>
    <%= f.label :title, "Title" %><br/>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :chosen_date, "Date" %><br/>
    <%= f.text_field :chosen_date, :class => 'chosen_date' %>
    </p>
    <p>
    <%= f.label :content, "Content" %><br/>
    <%= f.text_area :content, :rows => "10", :cols => "30" %>
    </p>
    <p><%= f.submit "Save" %></p>
    <% end %>
